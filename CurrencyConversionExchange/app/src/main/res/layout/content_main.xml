<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBl">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currency Conversion Exchange"
        android:gravity="center_horizontal"
        android:paddingBottom="50dp"
        android:textSize="@dimen/font_medium"
        android:typeface="serif"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="40dp"
        />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/dollar_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dollar_lbl"
            android:gravity="center_horizontal"
            android:textSize="60px"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_message"
            android:layout_toRightOf="@id/dollar_lbl"
            android:textColor="@color/black"
            android:textSize="60px"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/convert_lbl"
            android:gravity="center_horizontal"
            android:textSize="60px"
            android:layout_marginTop="66dp"
            android:layout_marginBottom="46dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/currencyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello!"
            android:textSize="60px"
            android:layout_toRightOf="@id/convert"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/apply"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/apply"
        android:onClick="apply"
        android:background="@color/green"
        android:textColor="@color/black"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/close"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/close"
        android:layout_marginTop="16dp"
        android:onClick="close"
        android:background="@color/red"
        android:textColor="@color/black"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"

        />
</LinearLayout>